#include "ex_interrupt.h"

void main(void)
{
	/*gpio init*/
	DDRB=0XFF;
	PORTB=0XFF;

	//Enable global ISR
	sei();
	//which ISR do you want and when it will happen
	EX_ISR_TRIGGER_EDGE(ex_int0,rising_edge);
	EX_ISR_ENABLE(ex_int0);

	while(1)
	{
		//TOOGLE_REG(PORTB);
		//_delay_ms(800);
	}

}


ISR(INT0_vect)
{
	DDRA=0xff;
}






